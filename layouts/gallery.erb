body { margin: 0 auto; width: 960px; text-align: center; font-family: sans-serif; font-size: 16px; line-height: 145%; color: #404040; text-rendering: optimizeLegibility; hyphens: auto; font-weight: 300; }
h1, h2, h3, h4, h5, h6 { margin: 1em 0 1em 0; font-weight: 300; line-height: 125%;}
footer { font-size: 0.85em; color: #d3d3d3; margin-top: 1em;}
footer a, footer a:visited { text-decoration: none; color: #d3d3d3;}
.social ul { margin: 32px 0; padding: 0; }
.social li { display: inline-block; padding-right: 16px; }
.social li:last-of-type { padding-right: 0; }

