#!/usr/bin/env ruby

preprocess do
end

compile "/photos/*", rep: :w640 do
  filter :resize_image, { width: 640, quality: 85 } if item[:extension] == "jpg"
end

compile "/photos/*" do
  filter :resize_image, { width: 960, quality: 85 } if item[:extension] == "jpg"
end

compile 'sitemap' do
  filter :erb
end

compile '/favicon/*' do
end

compile "/trips/*" do
  if item[:extension] == "md"
    filter :convert_image_markup
    filter :kramdown
    filter :typogruby
    layout "trip"
  end
end

compile "/feed" do
  filter :erb
  filter :absolute_urls
end

compile %r{/resources/(css|js)/*} do
end

compile '/google41172420f42c0922' do
end

compile "/resources/*" do
  unless item.binary?
    filter :erb
    filter :rainpress if item[:extension] == "css"
  end
end

compile "*" do
  unless item.binary?
    filter :erb
    filter :kramdown if item[:extension] == "md"
    filter :typogruby
    layout "page"
  end
end


route 'sitemap' do
  item.identifier.chop + '.xml'
end

route 'robots' do
  item.identifier.chop + ".txt"
end


route "/photos/*", rep: :w640 do
  "/photos/640x" + item.identifier.to_s[7..-2] + ".jpg" if item[:extension] == "jpg"
end

route "/photos/*" do
  "/photos/960x" + item.identifier.to_s[7..-2] + ".jpg" if item[:extension] == "jpg"
end

route '/favicon/*' do
  item.identifier.chop.gsub("favicon/", "") + "." + item[:extension]
end

route '/google41172420f42c0922' do
  item.identifier.chop + "." + item[:extension]
end

route %r{/resources/(css|js)/*} do
end

route "/resources/*" do
  item.identifier.to_s.slice(10, item.identifier.to_s.length - 11) + "." + item[:extension]
end

route "*" do
  if ["gpx"].include?(item[:extension])
    # do nothing
  elsif item.binary? || ["css", "js"].include?(item[:extension])
    item.identifier.chop + (item[:extension].nil? ? "" : ("." + item[:extension]))
  else
    item.identifier + "index.html"
  end
end

layout "*", :erb

postprocess do
  html_files = Dir["output/**/*.html"]
  html_files.each do |file|
    content = IO.read(file)
    content_with_image_size = AddImageSize.new.call(content)
    IO.write(file, content_with_image_size)
  end
end
