  </head>
  <body>

  <div class="main">
    <h1><%= item[:title] %></h1>
    <img src="<%= gallery_image_path(@item[:trip], @item[:photo]) %>" alt="<%= @item[:title] %>" />
    <div class="description">
      <p><%= @item[:description] %></p>
      <p><%= link_to "Read more", find_trip(@item[:trip]) %></p>
    </div>
    <div class="social">
      <ul>
        <li><a href="http://www.facebook.com/sharer/sharer.php?u=<%= page_url(@item) %>"><img src="/img/facebook.png" alt="Share on Facebook" /></a></li>
        <li><a href="//www.reddit.com/submit?url=<%= page_url(@item) %>&title=<%= CGI.escape(item[:title]) %>"><img src="/img/reddit.png" alt="Share on Reddit" /></a></li>
        <li><a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(@item[:title]) %>&url=<%= page_url(@item) %>&via=jakubgarfield"><img src="/img/twitter.png" alt="Share on Twitter" /></a></li>
        <li><a href="http://pinterest.com/pin/create/link/?url=<%= page_url(@item) %>"><img src="/img/pinterest.png" alt="Share on Pinterest" /></a></li>
      </ul>
    </div>
    <footer>
      <p>&copy; <%= Time.now.year %> <a href="https://barakuba.com">Barbora Hájková</a> &amp; <a href="https://chodounsky.net">Jakub Chodounský</a> &middot; <%= link_to("Privacy Policy", "/privacy-policy/") %></p>
    </footer>
